<div class="post-container">
    <% @posts.each do |post|%>
    <div class="post-index-item card">
        <img src=" <%= "/content_image/#{post.image_name}" %>" class="card-img-top">
        <div class="card-body">
        <h5 class="card-title">
            ユーザー名
            <%# ユーザー名にする %>
        </h5>
        <p class="card-text">
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </p>
       
        </div>
    </div>
    <%end%>
</div>
