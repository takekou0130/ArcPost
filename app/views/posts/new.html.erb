<div class="post-container">
    <div class="post-form text-center">
        <h1 class="heading-message">Let's Post!!</h1>
        <%= form_tag("/posts/create", {multipart: true}) do %>
        <div class="form-body">
            <p>コメント</p>
            <textarea name="content"></textarea>
            <p>画像</p>
            <input name="image", type="file">
            <p>スポット名・住所</p>
            <input name="address">
            <div class="submit-container">
            <input type="submit" value="シェア">
            </div>
        </div>  
        <% end %>
    </div>
</div>